<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center_vertical|center_horizontal|center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="REGRAS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Regra"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:padding="3dip"
                android:text="Pontos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Acertar o placar do jogo:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosJogo"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Acertar o vencedor \nou empate diferente do real:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosVencedor"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Acertar time classificado\nda proxima fase(por\n time classificado):"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosTimeClassificado"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Acertar a combinação\n de jogo da proxima\n fase(cada jogo):"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosCombinacaoJogo"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Acertar o campeão:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosCampeao"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Acertar o Vice-Campeão:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosViceCampeao"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>
        
        <TableRow>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:text="-Acertar o terceiro lugar:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosTerceiro"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>
        
        <TableRow>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:text="-Acertar o quarto lugar:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campoPontosQuarto"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

                <requestFocus />
            </EditText>
        </TableRow>
    </TableLayout>
        </LinearLayout>
    </ScrollView>

    

</LinearLayout>