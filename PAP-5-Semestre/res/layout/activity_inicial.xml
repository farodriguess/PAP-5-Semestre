<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="TELA DE ACESSO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="serif" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtViewEmail"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center_horizontal"
                android:text="E-MAIL:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/email"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#DCDCDC"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Digite seu e-mail"
                android:inputType="textEmailAddress"
                android:textSize="25sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="SENHA:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/senha"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#DCDCDC"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shap_button"
                android:onClick="btnEntrar"
                android:text="ENTRAR"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:onClick="btnCadastro"
                android:text="@string/cadastra_se"
                android:textStyle="bold"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:src="@drawable/futebol" />

            <Button
                android:id="@+id/button3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:onClick="btnRecuperarSenha"
                android:text="@string/rec_senha"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>