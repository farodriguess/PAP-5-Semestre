<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="EDITAR CAMPEONATO"
            
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnIrFase1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shap_button"
            android:typeface="serif"
                android:textStyle="bold"
            android:text="Editar informações do Campeonato" />

        <Button
            android:id="@+id/btnIrFase2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/shap_button"
            android:typeface="serif"
                android:textStyle="bold"
            android:text="Editar Partidas" />

        <Button
            android:id="@+id/removerTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/shap_button"
            android:typeface="serif"
                android:textStyle="bold"
            android:text="Ver Participantes" />

        <Button
            android:id="@+id/button4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/shap_button"
            android:typeface="serif"
                android:textStyle="bold"
            android:text="Ranking" />

        <Button
            android:id="@+id/button5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/shap_button"
            android:typeface="serif"
                android:textStyle="bold"
            android:text="Resultado da Partida" />

        <Button
            android:id="@+id/button6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/shap_button"
            android:typeface="serif"
                android:textStyle="bold"
            android:onClick="botaoAjustarRegras"
            android:text="Regras" />

    </LinearLayout>

</LinearLayout>
