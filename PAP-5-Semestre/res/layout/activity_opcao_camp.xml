<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:text="Opções do campeonato"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_button"
            android:layout_marginTop="3dp"
            android:text="Editar inf. do campeonato"
            
            android:textSize="17sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_button"
            android:layout_marginTop="3dp"
            android:text="Editar partidas" />

        <Button
            android:id="@+id/button3"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_button"
            android:layout_marginTop="3dp"
            android:text="Ver partcipantes" />

        <Button
            android:id="@+id/button4"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_button"
            android:layout_marginTop="3dp"
            android:text="Ranking" />

        <Button
            android:id="@+id/button6"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_button"
            android:layout_marginTop="3dp"
            android:text="Resultados das partidas" />

        <Button
            android:id="@+id/button5"
           android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_button"
            android:layout_marginTop="3dp"
             android:text="Definir status" />

        <Button
            android:id="@+id/button7"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_button"
            android:layout_marginTop="3dp"
            android:text="Regras" />
    </LinearLayout>

</RelativeLayout>